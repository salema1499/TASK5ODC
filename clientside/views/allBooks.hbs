{{>header}}
{{>nav}}
<section class="my-5 container">
    <table class="table table-bordered text-white">
        <thead>
            <tr>
                <th>id</th>
                <th>Name Book</th>
                <th>Name Author </th>
                <th>Pages</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#if hasBooks}}
            {{#each books}}
            <tr>
            
                <td>{{id}}</td>
                <td>{{name_book}}</td>
                <td>{{name_author}}</td>
                <td>{{num_pages}}</td>
                <td>
                  <a href="/del/{{id}}" class="btn btn-danger mx-3">Delete</a>
                  <a href="/edit/{{id}}" class="btn btn-warning mx-3">Edit</a>
                 
              </td>
            </tr>
            {{/each}}
            {{else}}
            <tr class="alert alert-danger">
                <td colspan="5" class="text-center">no data  yet</td>
            </tr>
            {{/if}}
        </tbody>
    </table>
</section>
{{>footer}}